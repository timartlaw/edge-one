{
  "$schema": "https://opencode.ai/config.json",
  // Theme configuration
  "theme": "opencode",
  "model": "timex/gemini-claude-sonnet-4-5",
  "autoupdate": true,
  "provider": {
    "timex": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "TimeX (local)",
      "options": {
        "baseURL": "http://localhost:8317/v1",
      },
      "models": {
        "gemini-claude-sonnet-4-5": {
          "name": "Claude sonnet4.5"
        },
        "gemini-claude-sonnet-4-5-thinking": {
          "name": "Claude sonnet4.5 thinking"
        },
        "gemini-claude-opus-4-5-thinking": {
          "name": "Claude opus4.5 thinking"
        },
        "gpt-oss-120b-medium": {
        },
        "tab_flash_lite_preview": {
        },
        "gemini-2.5-flash": {
        },
        "gemini-3-flash-preview": {
          "name": "Gemini3 flash"
        },
        "gemini-3-pro-image-preview": {
          "name": "Gemini3 pro image"
        },
        "gemini-3-pro-preview": {
          "name": "Gemini3 pro high"
        },
        "Glm4.7": {
          "id": "z-ai/glm4.7",
          "name": "Nvidia glm4.7"
        },
        "Minimax-m2.1": {
          "id": "minimaxai/minimax-m2.1",
          "name": "Nvidia minimax-m2.1"
        },
      }
    },
    "openrouterx": {
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "baseURL": "https://openrouter.ai",
        "apiKey": "YOUR_OPENROUTER_KEY"
      },
      "models": {
        "claude-sonnet": {
          "id": "anthropic/claude-3.5-sonnet",
        }
      }
    },
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama (local)",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "gpt-oss:20b-16k": {
          "name": "GPT OSS 20b (16k context)"
        }
      }
    }
  }
}
